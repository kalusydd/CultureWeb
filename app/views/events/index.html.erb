<div class="event-background">

  <div>
    <h1 class="header-all">Hey XXXX,<br>wanna do some<br>culture?</h1>
  </div>

  <div class="card p-2 m-3">
    <% @events.each do |event| %>
      <%= render "index_event_image", event: event %>
        <div class="sub-header-all">
        <h2><%= link_to event.title, event_path(event) %></h2>
        <div class="body-all">
        <p><%= event.date.day%>.<%= event.date.month%>.<%= event.date.year%>  <%= event.time.hour %>:<%= event.time.min %></p>
      <p><%= event.venue_name %></p>
  <% end %>
      </div>
    </div>
  </div>

  <div class="search_form_with">
    <%= form_with url: root_path, method: :get do |form| %>
      <%= form.select :capacity, options_for_select(['<10', '10-30', '>30'],
                        params[:capacity]), prompt: 'Select capacity' %>
      <%= form.check_box :price, { checked: params[:price] == "FREE" } %>
      <%= form.label :price, "FREE" %>
      <%= text_field_tag :query, params[:query],
                        class: "form-control",
                        placeholder: "I'm looking for..." %>
      <%= text_field_tag :location, params[:location],
                        class: "form-control",
                        placeholder: "Kiez..." %>
      <%= submit_tag "Search", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
