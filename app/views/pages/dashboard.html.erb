<div class="dashboard-background">

<div data-controller="headline" data-headline-bookings-value="Events you're...">
    <h1 class="header-all"></h1>
</div>

<div class="booking-list" data-controller="toggle">

  <div class="chat-toggle">
    <label class="switch">
    <input type="checkbox" id="togBtn" data-action="click->toggle#toggleBookingList">
    <div class="slider round">
      <span class="attending"></span>
      <span class="organising"></span>
    </div>
    </label>
  </div>

  <div class="container-booking" data-toggle-target="attBookings">
    <% if current_user.bookings.exists? %>
      <%= render "bookings_as_attendee" %>
    <% else %>
      <!--<div class= "not">
        <body-all > Give a fuck (no attendance) </body-all>
      </div>-->
      <p>You don't have any upcoming events!</p>
      <%= link_to "Check out cool events near you", root_path, class:"btn btn-ghost-orange-more" %>
    <% end %>
  </div>



